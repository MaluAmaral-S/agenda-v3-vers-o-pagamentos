# --- Stripe ---
# Copie as chaves Test/Live diretamente do dashboard.
STRIPE_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_BRONZE_PRICE_ID=price_XXXXBRONZE
STRIPE_PRATA_PRICE_ID=price_XXXXPRATA
STRIPE_OURO_PRICE_ID=price_XXXXOURO
# Webhook (Developers → Webhooks → seu endpoint).
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXX

# --- Mercado Pago (marketplace / split) ---
# Token da plataforma (APP_USR...) obtido no painel Mercado Pago → Aplicações → Credenciais.
MP_PLATFORM_ACCESS_TOKEN=APP_USR-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Mesmo segredo cadastrado na página de Webhooks da aplicação do Mercado Pago.
MP_WEBHOOK_SECRET=sua_assinatura_webhook_super_segura
# URL pública configurada na página de Webhooks (HTTPS obrigatório).
MP_WEBHOOK_PUBLIC_URL=https://minhaapp.com/api/webhooks/mercadopago
# Categoria padrão enviada em items.category_id quando o serviço/agendamento não
# define um valor específico. Consulte a lista oficial do Mercado Pago (ex.: services, others, tickets).
MP_DEFAULT_ITEM_CATEGORY_ID=services

# Se MP_WEBHOOK_DISABLE_SIGNATURE_VALIDATION=true, a validação de assinatura
# do webhook será ignorada (útil em desenvolvimento). Deixe como false em
# produção.
MP_WEBHOOK_DISABLE_SIGNATURE_VALIDATION=false

# --- OAuth Mercado Pago (conexão dos sellers) ---
# Credenciais da aplicação (mesma tela do painel).
MP_CLIENT_ID=0000000000000000
MP_CLIENT_SECRET=APP_USR-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Deve corresponder exatamente ao Redirect URI registrado na aplicação (HTTPS + caminho /api/integrations/mercadopago/oauth/callback).
MP_OAUTH_REDIRECT_URI=https://minhaapp.com/api/integrations/mercadopago/oauth/callback

# --- Frontend (rotas de retorno do Checkout Pro) ---
# Ajuste para o domínio público do frontend ou URLs do ambiente de testes.
NEXT_PUBLIC_MP_SUCCESS_URL=https://minhaapp.com/pagamento/sucesso
NEXT_PUBLIC_MP_FAILURE_URL=https://minhaapp.com/pagamento/erro
NEXT_PUBLIC_MP_PENDING_URL=https://minhaapp.com/pagamento/pendente

# --- URLs base do app ---
CLIENT_URL=http://localhost:5173
SERVER_URL=http://localhost:3000

# --- Banco de Dados (ajuste conforme seu ambiente) ---
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=senha
DB_NAME=agenda
DB_DIALECT=postgres
DB_PORT=5432

# --- App ---
NODE_ENV=development
JWT_SECRET=uma_chave_segura_para_tokens
PORT=3000
